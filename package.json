{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist packages/**/node_modules/.cache",
		"lint": "eslint packages --ext mjs,js,ts --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "run-s build:**",
		"build:1": "lerna run build --parallel --scope=@repeaterts/utilities --scope=@repeaterts/eslint-config",
		"build:2": "lerna run build --parallel --ignore=@repeaterts/utilities --ignore=@repeaterts/eslint-config",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive --latest"
	},
	"dependencies": {},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-node-resolve": "^11.1.1",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.22",
		"@typescript-eslint/eslint-plugin": "^4.14.0",
		"@typescript-eslint/parser": "^4.14.0",
		"eslint": "^7.18.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"fs-extra": "^9.1.0",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"lerna": "^3.22.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"rollup": "^2.38.0",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.29.0",
		"ts-jest": "^26.5.0",
		"ts-node": "^9.1.1",
		"typedoc": "0.20.35",
		"typedoc-plugin-lerna-packages": "^0.3.1",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^4.1.3"
	},
	"peerDependencies": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/repeaterts/utilities.git"
	},
	"engines": {
		"node": ">=12"
	}
}
